				responsive: true
		   };
		   var COLOR1 = LobiAdmin.lightenColor(LobiAdmin.DEFAULT_COLOR, -15);
		   var COLOR2 = LobiAdmin.lightenColor(LobiAdmin.DEFAULT_COLOR_1, 0);
