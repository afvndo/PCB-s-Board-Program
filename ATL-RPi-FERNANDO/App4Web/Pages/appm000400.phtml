		   var COLOR4 = LobiAdmin.fadeOutColor(LobiAdmin.DEFAULT_COLOR_3, 40);

		   var FADEOUT_COLOR_FACTOR = 20;

		   //Initialize line chart
		   (function(){
				// Get the context of the canvas element we want to select
				// TEMPERARURA : 1 e 2
				var temperaturaData = {
					labels: _faixas,
					datasets: fillChartJsColors('line', [
